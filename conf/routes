# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                       controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file           controllers.Assets.at(path="/public", file)

# Flights
GET   /flights     				controllers.Flights.index()
GET   /flights/:id				controllers.Flights.read(id: Long)
POST  /flights     				controllers.Flights.create()
POST  /flight/:id/update		controllers.Flights.update(id: Long)
POST  /flight/:id/delete		controllers.Flights.delete(id: Long)